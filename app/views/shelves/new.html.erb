		<ul>
			<% @shelf.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>


<%= form_for @shelf, html: {novalidate: 'novalidate'} do |shelf_form| %>
	<p>
		<%= shelf_form.label :name %>
		<%= shelf_form.text_field :name, :required => true %>
	</p>
	<p>
		<%= shelf_form.submit 'Save Shelf' %>
	</p>
<% end %>